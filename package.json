{
  "name": "vscode-beefweb",
  "displayName": "Beefweb",
  "description": "Control your foobar2000 or deadbeef via beefweb server.",
  "license": "MIT",
  "version": "0.5.0",
  "publisher": "gplane",
  "repository": {
    "type": "git",
    "url": "https://github.com/g-plane/vscode-beefweb"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "beefweb",
    "foobar2000",
    "deadbeef"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "media/icon.png",
  "main": "./out/extension",
  "extensionKind": "ui",
  "contributes": {
    "commands": [
      {
        "category": "beefweb",
        "command": "beefweb.playPrev",
        "title": "Play previous song",
        "icon": "media/prev.svg"
      },
      {
        "category": "beefweb",
        "command": "beefweb.playNext",
        "title": "Play next song",
        "icon": "media/next.svg"
      },
      {
        "category": "beefweb",
        "command": "beefweb.togglePause",
        "title": "Toggle pause",
        "icon": "media/pause.svg"
      },
      {
        "category": "beefweb",
        "command": "beefweb.play",
        "title": "Play song",
        "icon": "media/play.svg"
      },
      {
        "category": "beefweb",
        "command": "beefweb.stop",
        "title": "Stop",
        "icon": "media/stop.svg"
      },
      {
        "category": "beefweb",
        "command": "beefweb.switchSong",
        "title": "Switch to another song"
      }
    ],
    "configuration": {
      "title": "Beefweb Control",
      "properties": {
        "beefweb.server.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "The host of Beefweb server."
        },
        "beefweb.server.port": {
          "type": "integer",
          "default": 8880,
          "description": "The port of Beefweb server."
        },
        "beefweb.statusBarAction": {
          "type": "string",
          "enum": [
            "togglePause",
            "playNext",
            "switchSong"
          ],
          "default": "togglePause",
          "description": "The action of clicking status bar."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beefweb",
          "title": "Beefweb",
          "icon": "media/view.svg"
        }
      ]
    },
    "views": {
      "beefweb": [
        {
          "id": "beefwebPlaylist",
          "name": "Playlists"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == beefwebPlaylist",
          "command": "beefweb.play",
          "group": "navigation@1"
        },
        {
          "when": "view == beefwebPlaylist",
          "command": "beefweb.togglePause",
          "group": "navigation@2"
        },
        {
          "when": "view == beefwebPlaylist",
          "command": "beefweb.playPrev",
          "group": "navigation@3"
        },
        {
          "when": "view == beefwebPlaylist",
          "command": "beefweb.playNext",
          "group": "navigation@4"
        },
        {
          "when": "view == beefwebPlaylist",
          "command": "beefweb.stop",
          "group": "navigation@5"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "tsc -p .",
    "watch": "tsc -watch -p .",
    "test": "pnpm build && node ./node_modules/vscode/bin/test",
    "format": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@gplane/tsconfig": "^6.0.0",
    "@types/node": "^16.11.7",
    "@vscode/test-electron": "^2.3.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
